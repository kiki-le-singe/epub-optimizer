{
  "name": "epub-optimizer",
  "version": "1.5.0",
  "description": "Optimize EPUB files by compressing HTML, CSS, images, fonts and recompressing the archive",
  "main": "dist/optimize-epub.js",
  "type": "module",
  "scripts": {
    "# Build commands": "# Complete pipeline processes",
    "build": "pnpm run build:prod",
    "build:dev": "tsc",
    "build:prod": "rm -rf dist && tsc -p tsconfig.prod.json && pnpm run minify:safe",
    "minify:safe": "node --loader ts-node/esm scripts/minify-dist.ts",
    "optimize": "node dist/src/pipeline.js",
    "optimize:clean": "node dist/src/pipeline.js --clean",
    "cleanup": "rm -rf temp_epub",
    "# Dev tools": "# Development utilities",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src scripts --ext .ts",
    "lint:fix": "eslint src scripts --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\""
  },
  "author": "kiki-le-singe",
  "license": "MIT",
  "dependencies": {
    "@types/yazl": "^3.3.0",
    "cheerio": "^1.1.2",
    "clean-css": "^5.3.3",
    "fontkit": "^2.0.4",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "html-minifier-terser": "^7.2.0",
    "path": "^0.12.7",
    "sharp": "^0.34.5",
    "subset-font": "^2.4.0",
    "svgo": "^4.0.0",
    "unzipper": "^0.12.3",
    "yargs": "^18.0.0",
    "yazl": "^3.3.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "epub",
    "optimizer",
    "compression",
    "minification",
    "ebook"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/clean-css": "^4.2.11",
    "@types/fontkit": "^2.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^24.10.1",
    "@types/subset-font": "^2.3.0",
    "@types/unzipper": "^0.10.11",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "terser": "^5.44.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  }
}